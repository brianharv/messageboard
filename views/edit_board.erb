<h3> Edit <%= @board.title%> </h3>

<form action="/boards/<%=@board.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="title_rename">Rename Board</label>
  <input id="title_rename" name="title_rename" class="form-control" type="text">

  <label for="new_description">Board Description:</label>
  <textarea id="new_description" name="new_description" rows="10" cols="100">
    <% if @board.description != ""%>
      <%= @board.description%>
    <%else %>
      "What's on your mind?"  
    <% end %>
  </textarea>
  <br><br>
  <button type="submit" class="btn">Update Board</button>
  <br><br>
   <a href="/boards">Back to Boards</a>
</form>
